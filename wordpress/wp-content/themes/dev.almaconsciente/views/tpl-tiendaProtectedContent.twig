<div class="d-block">
    <br>
    {% for elem in data %}
    <div class="d-block" {{ elem.display_hide ? 'collapse-p' : '' }}>
        {% if elem.display_hide %}
        <a href="#" btn-collapse-p class="h4 fw-bold btn btn-light">* {{ elem.title }} <i class="fa fa-angle-down"></i></a>
        {% else %}
        <h4 class="fw-bold">* {{ elem.title }}</h4>
        {% endif %}
        
        <div class="w-100" {{ elem.display_hide ? 'main-panel' : '' }}>
        <br>
        {{ elem.flat_element }}
        </div>
    </div>
    {% endfor %}
    <hr>
</div>